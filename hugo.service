[Unit]
Description=Run hugo server for my blog
Requires=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/okamoto/green_light
User=okamoto
Group=okamoto
ExecStart=/usr/bin/bash /home/okamoto/green_light/start.sh
ExecStop=/bin/kill -s QUIT $MAINPID
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
